async function gerarLaudoIncendio() {
  const dados = {
    tipoSistema: "Fire System",
    tecnico: document.getElementById("tecnicoResponsavel").value,
    ajudante: document.getElementById("ajudanteResponsavel").value,
    dataEntrega: document.getElementById("dataEntrega").value,
    emailCliente: document.getElementById("emailCliente").value,
    telefoneCliente: document.getElementById("telefoneCliente").value,
  };

  // coletar imagens (pequeno exemplo, você pode expandir depois)
  const imagens = [];
  document.querySelectorAll("#checklist input[type='file']").forEach(input => {
    if (input.files.length > 0) {
      for (const file of input.files) {
        imagens.push(file);
      }
    }
  });

  // Gera PDF com o template base
  await gerarPDFBrivax(dados, imagens);

  alert("✅ Laudo gerado e pronto para envio!");
}